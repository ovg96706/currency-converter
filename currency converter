import requests


def get_exchange_rate(base_currency, target_currency):
    url = f"https://api.exchangerate-api.com/v4/latest/{base_currency}"
    response = requests.get(url)

    if response.status_code == 200:
        data = response.json()
        return data['rates'].get(target_currency, None)
    else:
        print("Ошибка при получении данных о курсе валют.")
        return None


def convert_currency(amount, exchange_rate):
    return amount * exchange_rate


base_currency = input('Введите код валюты из которой хотите перевести: ').upper()
target_currency = input('Введите код валюты в которую хотите перевести: ').upper()
amount_in_base = int(input('Введите сумму для перевода: '))

exchange_rate = get_exchange_rate(base_currency, target_currency)

if exchange_rate:
    amount_in_target = convert_currency(amount_in_base, exchange_rate)
    print(f"{amount_in_base} {base_currency} равно {amount_in_target} {target_currency} по курсу {exchange_rate}")
else:
    print(f"Не удалось получить курс для {target_currency}.")
